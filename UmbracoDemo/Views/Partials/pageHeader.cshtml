@inherits Umbraco.Web.Mvc.UmbracoViewPage

@{
    var title = Model.HasValue("title") ? Model.Value("title") : Model.Value("Name");
    var subtitle = Model.HasValue("subtitle") ? Model.Value<string>("subtitle") : "";
    var image = Model.Value<IPublishedContent>("mainImage");

    string smallImageUrl = "";
    string imageUrl = "";
    if (image != null)
    {
        smallImageUrl = image.GetCropUrl("PageHeader.Tiny");
        imageUrl = image.GetCropUrl("PageHeader.Large");
    }

    var authorName = Model.HasProperty("authorName") && Model.HasValue("authorName") ? Model.Value<string>("authorName") : "";
    DateTime? articleDate = Model.HasProperty("articleDate") && Model.HasValue("articleDatee") ? Model.Value<DateTime?>("articleDate") : DateTime.MinValue;

    bool hasAuthorDetails = false;
    if(!string.IsNullOrWhiteSpace(authorName) && articleDate!= DateTime.MinValue)
    {
        hasAuthorDetails = true;
    }
    //bool hasAuthorDetails = !string.IsNullOrWhiteSpace(authorName) && articleDate != DateTime.MinValue;
}

<!-- Page Header -->
<header class="masthead lazyload"  style="@(!string.IsNullOrWhiteSpace(image.Url) ? "background-image: url('" + image.Url +"')" : null)">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>@title</h1>
                    <h2>@Model.Value("authorName")</h2>
                    @if (!string.IsNullOrWhiteSpace(subtitle))
                    {
                        if (hasAuthorDetails)
                        {
                            <h2 class="subheading">@subtitle</h2>
                        }
                        else
                        {
                            <span class="subheading">@subtitle</span>
                        }
                    }

                    @if (hasAuthorDetails)
                    {
                        <span class="meta">
                            Posted
                            @if (!string.IsNullOrWhiteSpace(authorName))
                            {
                                @Html.Raw("by ") @authorName
                            }
                            on @articleDate.Value.ToString("MMMM dd, yyyy")
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
</header>